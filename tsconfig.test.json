{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "jest.setup.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}

