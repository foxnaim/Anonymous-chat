{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "YARN_PRODUCTION=false yarn install --frozen-lockfile",
    "buildCommand": "NEXT_DISABLE_ESLINT=1 NODE_ENV=production yarn build"
  },
  "deploy": {
    "startCommand": "NODE_ENV=production yarn start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

